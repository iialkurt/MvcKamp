

@using EntityLayer.Congrete
@model List<Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Kategori Listesi</h2>

<table class="table table-hover">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Açıklama</th>
        <th>Güncelle</th>
        <th>Sil</th>
        <th>Başlıklar</th>

    </tr>
    @foreach (var item in Model)
    {
<tr>
    <th>@item.CategoryId</th>
    <td>@item.CategoryName</td>
    <td>@item.CategoryDescription</td>

    <td><a href="/AdminCategory/EditCategory/@item.CategoryId" class="btn btn-warning">Güncelle</a></td>
    <td><a href="/AdminCategory/DeleteCategory/@item.CategoryId" class="btn btn-danger">Sil</a></td>
    <td><a href="#" class="btn btn-primary">Başlıklar</a></td>

</tr>
    }

</table>

<a class="btn btn-info" href="/AdminCategory/AddCategory">Yeni Kategori</a>

<button class="btn btn-warning">Kategori Listesi</button>